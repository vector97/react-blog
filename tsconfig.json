{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "paths": {
      "@app/*": [
        "./app/*"
      ],
      "@entities/*": [
        "./entities/*"
      ],
      "@features/*": [
        "./features/*"
      ],
      "@pages/*": [
        "./pages/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@widgets/*": [
        "./widgets/*"
      ]
    },
    "target": "es5"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
